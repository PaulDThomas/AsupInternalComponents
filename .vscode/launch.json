    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run web server",
            "command": "npm start",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "PORT": "3003"
            }
        },
        {
            "name": "Attach to Browser debug",
            "type": "pwa-chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Run tests",
            "command": "npm run test",
            "request": "launch",
            "type": "node-terminal",
        },
    ]
}